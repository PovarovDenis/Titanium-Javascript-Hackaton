extends ../layout

block content

  form.form-horizontal(action='../../../admin', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='action', value='task-edit')
    input(type='hidden', name='taskId', value=taskId)
    .form-group
      label.col-sm-3.control-label(for='taskName') Task name
      .col-sm-7
        input.form-control(type='text', name='taskName', id='taskName', placeholder='Task name', autofocus, required, value=taskName)
    .form-group
      label.col-sm-3.control-label(for='lessonID') Lesson ID
      .col-sm-7
        select(name='selectLessonId', id='selectLessonId')
          //option(value=undefined) Choose the Lesson to which task is related
          each lesson in db
            option(value=lesson.id selected=lesson.id === lessonId) #{lesson.name} ID: #{lesson.id}
        //input.form-control(type='text', name='lessonID', id='lessonID', placeholder='Lesson ID', autofocus, required)
    .form-group
      label.col-sm-3.control-label(for='taskDescription') Task description
      .col-sm-7
        textarea.form-control(name="taskDescription", cols="30", rows="10", id='taskDescription', placeholder=taskDescription, required)
        //value=taskDescription doesnt work for textarea
    .form-group
      label.col-sm-3.control-label(for='taskTests') Task tests
      .col-sm-7
        textarea.form-control(name="taskTests", cols="30", rows="10", id='taskTests', placeholder=taskTests, required)
        //value=taskTests doesnt work for textarea
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          | OK
